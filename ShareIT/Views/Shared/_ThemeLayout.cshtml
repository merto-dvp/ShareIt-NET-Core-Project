<body>
    <header id="home">
        <div class="header-top">
            <div class="container">
                <div class="row align-items-center justify-content-between d-flex">
                    <div id="logo">

                        
                        <a asp-controller="Home" asp-action="Index" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-weight:bold;font-size:32px" ><img src="~/img/logo.jpg" style="width:40px;height:40px;" alt="" title="" /> ShareIT</a>

                    </div>
                    <button type="button" id="mobile-nav-toggle" style="border:2px solid;background-color:grey;margin:2px"><i class="lnr lnr-menu"></i></button>


                    <div class="row">
                        <nav id="nav-menu-container">

                            <ul class="nav-menu">



                                <li><a asp-area="" class="genric-btn primary circle" style="border-color:grey;font-weight:bold;background:rgba(19,23,35,1.2);width:120px" asp-controller="Upload" asp-action="Index">Dosya Yükle</a></li>
                                <li><a asp-area="" class="genric-btn primary circle" style="border-color:grey;font-weight:bold;background:rgba(19,23,35,1.2);width:120px" asp-controller="Account" asp-action="Files">Hesabım</a></li>




                                <li><partial name="_LoginPartial" /></li>

                            </ul>






                        </nav>

                    </div>
                </div>

            </div>
        </div>
    </header><!-- #header -->


    @RenderBody()


    <!-- start footer Area -->
    <footer class="footer-area section-gap">
        <div class="container" style="margin-bottom:-100px;margin-top:-80px;float:right">
            <div class="row">
                <div class="col-lg-2 col-md-6 col-sm-6">
